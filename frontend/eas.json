{
  "cli": {
    "version": ">= 3.15.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "extends": "production",
      "distribution": "internal",
      "channel": "development",
      "android": {
        "buildType": "apk",
        "withoutCredentials": true,
        "gradleCommand": ":app:assembleDebug -PreactNativeArchitectures=arm64-v8a,x86_64"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": false
      }
    },
    "development_tv": {
      "extends": "development",
      "env": {
        "EXPO_TV": "1"
      },
      "android": {
        "buildType": "apk",
        "withoutCredentials": true,
        "gradleCommand": ":app:assembleDebug -PreactNativeArchitectures=armeabi-v7a,arm64-v8a,x86_64"
      },
      "ios": {
        "buildConfiguration": "Debug",
        "simulator": false
      }
    },
    "preview": {
      "extends": "production",
      "distribution": "internal",
      "channel": "preview",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk",
        "withoutCredentials": true
      }
    },
    "preview_tv": {
      "extends": "preview",
      "env": {
        "EXPO_TV": "1"
      }
    },
    "production": {
      "channel": "production",
      "autoIncrement": true,
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease -x lintVitalAnalyzeRelease -PreactNativeArchitectures=armeabi-v7a,arm64-v8a,x86_64"
      }
    },
    "production_tv": {
      "extends": "production",
      "env": {
        "EXPO_TV": "1"
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease -x lintVitalAnalyzeRelease -PreactNativeArchitectures=armeabi-v7a,arm64-v8a"
      },
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false
      }
    },
    "production_tv_signed": {
      "extends": "production_tv",
      "ios": {
        "buildConfiguration": "Release",
        "simulator": false,
        "credentialsSource": "remote"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
